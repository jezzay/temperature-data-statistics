{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2016"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": ".",
    "importHelpers": true,
    "noEmitHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "preserveSymlinks": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}